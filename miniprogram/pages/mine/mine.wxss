.login-btn{
  right: 0.5em;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
  /* background-color: blue; */
}






.reward-wrapper{
  margin-top: 0.5em;
  /* display: flex; */
}

.reward{
  display: flex;
  align-items: center;
  font-size: 1rem;
}

.list-wrapper{
  margin:1em 1em 1em ;
  display: flex;
  flex-direction: column;
}

.list{
  margin-bottom: 0.5em;
  padding: 1rem;
  display: flex;
  background-color: white;
  align-items: center;
  font-size: 1.3em;
  color: #5d6263;
  border-radius: 20rpx;
  border: 1rpx solid #b5bad0;
  justify-content: space-between;
}

.list-left{
  display: flex;
  align-items: center;
}

