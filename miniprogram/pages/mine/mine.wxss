.wrapper{
  width: 100%;
  height: 100vh;
  background-color: #f6f6f6;
}
.user-wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
  
  margin: 20rpx ;
  padding: 30rpx 50rpx;
  background-color: white;
  border-radius: 20rpx;
  border: 1rpx solid #b5bad0;
}

/* xtg */
.user-info-box{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.user-baseinfo-box{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
}
.user-avatar{
  margin-right: 30rpx;
  width: 4.5rem;
  height: 4.5rem;
}
.login-btn{
  width: 130rpx;
}

.level-box{
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}









