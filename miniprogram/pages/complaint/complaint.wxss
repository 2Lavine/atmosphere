/* miniprogram/pages/complaint/complaint.wxss */
.container {
  height: 100vh;
  display: flex;
  /* display: releati; */
  flex-direction: column;
  background: rgba(0, 0, 0, 0.01)
}

.search {
  width: 100%;
}

.add-icon {
  position: fixed;
  right: 20rpx;
  bottom: 30rpx;
  z-index: 10;
}

.home-icon {
  position: fixed;
  right: 20rpx;
  bottom: 130rpx;
  z-index: 10;
}

.header {
  width: 100%;
  display: flex;
  height: 208rpx;
}

.card {
  margin-top: 20rpx;
  border-radius: 20rpx;
  width: 700rpx;
  height: 540rpx;
  background: white;
  display: flex;
  flex-direction: column;
}

.top-graph {
  height: 400rpx;
  width: 700rpx;
}

.bottom {
  display: flex;
  height: 120rpx;
  justify-content: space-around;
  padding-bottom: 20rpx;
}

.table-name {
  font-size: 1.1rem;
  margin: 25rpx;
  color: rgba(0, 0, 0, .7)
}

.bottom-item-name {
  color: rgba(0, 0, 0, .3);
  font-size: 28rpx;
}

.red-circle::before {
  content: ' ';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin: 5rpx 0;
  border-radius: 50%;
  background-color: #5971C0;
  margin-right: 16rpx;
}

.blue-circle::before {
  content: ' ';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin: 5rpx 0;
  border-radius: 50%;
  background-color: #9ECA7E;
  margin-right: 16rpx;
}

.yellow-circle::before {
  content: ' ';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  margin: 5rpx 0;
  border-radius: 50%;
  background-color: #F3C96B;
  margin-right: 16rpx;
}

.bottom-item-number {
  margin-left: 28rpx;
  color: rgba(0, 0, 0, .7);
  font-size: 26rpx;
}

.bottom-item-diff {
  margin-left: 28rpx;
  color: rgba(0, 0, 0, .2);
  font-size: 20rpx;
}

.avatar {
  width: 20rpx;
}

.van-card{
  padding: 30rpx 20rpx !important;
  background-color: white !important;
  border-top: 1px #e8e8e888 solid;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  font-size: 0.85rem;
}
.empty-result {
  margin: 20rpx;
  color: rgba(0, 0, 0, .3)
}
.van-card__title{
  font-size: 0.9rem;
  font-weight: 600 !important;
  color: #666666 !important;
}

.van-card__desc{
  font-size: 0.9rem;
  margin-top: 10rpx;
  text-overflow:ellipsis;
}
