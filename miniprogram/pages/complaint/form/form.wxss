/* miniprogram/pages/complaint/form/form.wxss */
.container {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
}

.picker {
  width: 80%;
  height: 100rpx;
}

.cell-group {
  width: 100%;
}

.picker-popup {
  height: 100vh;
  width: 100vw;
}

.overlay-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.van-cell__title{
  font-size: 1rem;
}
.van-cell__label{
  font-size: 0.8rem;
}
.van-cell__value{
  font-size: 0.9rem;
}